{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 500,
    "data": {
        "url": "data/co2_emissions_over_time.json", 
        "format": {"type": "json"}
    },
    "mark": "line",
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal",
            "title": "Year"
        },
        "y": {
            "field": "CO2_Emissions",
            "type": "quantitative",
            "title": "CO₂ Emissions (Millions of Metric Tons)"
        },
        "color": {
            "field": "Industry",
            "type": "nominal",
            "title": "Industry or Activity"
        },
        "tooltip": [
            {"field": "Year", "type": "temporal", "title": "Year"},
            {"field": "CO2_Emissions", "type": "quantitative", "title": "CO₂ Emissions"},
            {"field": "Industry", "type": "nominal", "title": "Industry or Activity"}
        ]
    }
}
