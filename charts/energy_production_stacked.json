{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 500,
    "padding": 10,
    "data": {
        "url": "data/combined_energy_data.json",
        "format": {"type": "json"}
    },
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Year",
            "type": "ordinal",
            "axis": {
                "labelAngle": 0,
                "labelPadding": 10
            }
        },
        "y": {
            "field": "Generation",
            "type": "quantitative",
            "aggregate": "sum",
            "title": "Energy Generation (GWh)"
        },
        "color": {
            "field": "Type",
            "type": "nominal",
            "scale": {
                "domain": ["Renewable", "Non-Renewable"],
                "range": ["#76c7c0", "#e05e2b"]
            }
        },
        "tooltip": [
            {"field": "Year", "type": "ordinal"},
            {"field": "Generation", "type": "quantitative"},
            {"field": "Type", "type": "nominal"},
            {"field": "Technology", "type": "nominal"} 
        ]
    },
    "config": {
        "view": {
            "stroke": "transparent"
        },
        "axis": {
            "labelFontSize": 12,
            "titleFontSize": 14
        }
    }
}
