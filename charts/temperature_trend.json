{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Temperature Trends for Major Cities in Malaysia",
    "width": 700,
    "height": 400,
    "data": {
      "url": "data/major_cities_temperature_malaysia.json", 
      "format": {"type": "json"}
    },
    "mark": "line",
    "encoding": {
      "x": {"field": "Date", "type": "temporal", "title": "Date"},
      "y": {
        "field": "AverageTemperature",
        "type": "quantitative",
        "title": "Average Temperature (°C)",
        "scale": {
          "domain": [20, 35]
        }
      },
      "color": {"field": "City", "type": "nominal", "title": "City"},
      "tooltip": [
        {"field": "City", "type": "nominal", "title": "City"},
        {"field": "Date", "type": "temporal", "title": "Date"},
        {"field": "AverageTemperature", "type": "quantitative", "title": "Temperature (°C)"}
      ]
    }
  }
  