{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Fossil Fuel Subsidies and Renewable Energy Capacity",
    "vconcat": [
      {
        "data": {"url": "data/fossil_fuel_subsidies.json"},
        "mark": "geoshape",
        "projection": {"type": "mercator"},
        "encoding": {
          "color": {
            "field": "Subsidies",
            "type": "quantitative",
            "scale": {"scheme": "blues"}
          },
          "tooltip": [{"field": "Country", "type": "nominal"}, {"field": "Subsidies", "type": "quantitative"}]
        }
      },
      {
        "data": {"url": "data/renewable_energy.json"},
        "mark": "bar",
        "encoding": {
          "x": {"field": "Year", "type": "temporal", "timeUnit": "year"},
          "y": {"field": "RenewableEnergy", "type": "quantitative"},
          "color": {"field": "EnergyType", "type": "nominal"},
          "tooltip": [
            {"field": "Year", "type": "temporal"},
            {"field": "RenewableEnergy", "type": "quantitative"},
            {"field": "EnergyType", "type": "nominal"}
          ]
        },
        "width": 600,
        "height": 200
      }
    ]
  }
  