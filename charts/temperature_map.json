{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Map of Malaysia with Major Cities and Their Average Temperatures",
    "width": 900,
    "height": 500,
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "data\\malaysia-states.topojson",
          "format": {"type": "topojson", "feature": "states"}
        },
        "mark": "geoshape",
        "encoding": {
          "color": {"value": "lightgray"}
        }
      },
      {
        "data": {
          "url": "data/major_cities_temperature_malaysia.json",
          "format": {"type": "json"}
        },
        "mark": "circle",
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {"field": "AverageTemperature", "type": "quantitative", "scale": {"range": [100, 500]}},
          "color": {
            "field": "AverageTemperature",
            "type": "quantitative",
            "scale": {"scheme": "oranges"},
            "title": "Average Temperature (°C)"
          },
          "tooltip": [
            {"field": "City", "type": "nominal", "title": "City"},
            {"field": "AverageTemperature", "type": "quantitative", "title": "Average Temperature (°C)"}
          ]
        }
      }
    ]
  }
  